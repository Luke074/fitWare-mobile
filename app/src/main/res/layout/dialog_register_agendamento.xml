<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageButton
            android:id="@+id/image_button_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close_24"
            android:padding="5dp"
            android:layout_margin="4dp"
            android:background="@drawable/button_rounded"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>

        <EditText
            android:id="@+id/username_agendamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/image_button_close"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:hint="Pedro da Silva"/>

        <EditText
            android:id="@+id/date_agendamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/username_agendamento"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:hint="2020-04-19"/>

        <AutoCompleteTextView
            android:id="@+id/auto_textview_agendamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date_agendamento"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:hint="13Hrs as 14Hrs" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/auto_textview_agendamento"
            android:background="@drawable/inputs_redondos"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>