<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_aulas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_name_surname_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome do user"
                android:textSize="28sp"
                android:textColor="@color/dark"
                android:gravity="center"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/title_email_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email: "
                android:textSize="22sp"
                android:textColor="@color/dark"
                android:gravity="center"
                android:layout_below="@id/tv_name_surname_user"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="emailteste@hotmail.com "
                android:textSize="22sp"
                android:textColor="@color/dark"
                android:gravity="center"
                android:layout_below="@id/tv_name_surname_user"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/title_email_user"
                android:layout_marginStart="10dp" />

            <TextView
                android:id="@+id/title_cell_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="celular: "
                android:textSize="22sp"
                android:textColor="@color/dark"
                android:gravity="center"
                android:layout_below="@id/title_email_user"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/user_cell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11 98066-4022 "
                android:textSize="22sp"
                android:textColor="@color/dark"
                android:gravity="center"
                android:layout_below="@id/title_email_user"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/title_email_user"
                android:layout_marginStart="10dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>