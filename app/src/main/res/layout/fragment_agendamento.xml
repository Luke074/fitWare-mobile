<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <Button
        android:id="@+id/button_add_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agende seu dia"
        android:textColor="@color/light"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:background="@drawable/inputs_redondos"/>

    <TextView
        android:id="@+id/textview_dias_marcados"
        style="@style/TextTittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_add_date"
        android:layout_alignStart="@+id/button_add_date"
        android:layout_alignEnd="@+id/button_add_date"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"

        android:layout_marginEnd="219dp"
        android:drawableStart="@drawable/ic_baseline_calendar_today_24"
        android:drawablePadding="2dp"
        android:drawableTint="@color/blueLight"
        android:text="@string/days"
        android:textColor="@color/blueLight"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_agendamento"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textview_dias_marcados"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        tools:listitem="@layout/holder_agendamento_layout" />

</RelativeLayout>