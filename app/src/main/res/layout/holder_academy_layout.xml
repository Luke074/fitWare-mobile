<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:layout_marginBottom="7dp"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="@color/secondy">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp">

        <TextView
            android:id="@+id/textview_name_academy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Academia nome"
            style="@style/TextTittle"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/image_academy_card"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:src="@drawable/fitware_icon"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/textview_name_academy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textview_street_academy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rua Nova independencia"
            style="@style/TextCardDetail"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/image_academy_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/textview_city_academy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SÃ£o Paulo"
                style="@style/TextCardDetail"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/textview_street_academy"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/textview_cep_academy"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/textview_cep_academy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06364-570"
                style="@style/TextCardDetail"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/textview_street_academy"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/textview_city_academy"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

