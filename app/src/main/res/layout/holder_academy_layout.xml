<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:layout_marginTop="7dp"

    app:cardBackgroundColor="@color/light">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:paddingStart="10dp">

    <TextView
            android:id="@+id/name_academy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="15dp"
            android:text="Nome Academy"
            android:textColor="@color/dark"
            android:gravity="center"
        android:layout_marginTop="10dp"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/email_academy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/name_academy"
            android:text="Email: "
            style="@style/detailsCard" />

        <TextView
            android:id="@+id/value_email_academy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/email_academy"
            android:layout_toEndOf="@id/email_academy"
            android:layout_alignParentEnd="true"
            android:text="teste@hotmail.com"
            style="@style/detailsCard"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/cep_academy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/email_academy"
            android:text="Cep: "
            style="@style/detailsCard" />

        <TextView
            android:id="@+id/value_cep_academy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/cep_academy"
            android:layout_toEndOf="@id/cep_academy"
            android:layout_alignParentEnd="true"
            android:text="xxxxx-xxx"
            style="@style/detailsCard"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/street_academy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/cep_academy"
            android:text="Rua: "
            style="@style/detailsCard" />

        <TextView
            android:id="@+id/value_street_academy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/street_academy"
            android:layout_toEndOf="@id/street_academy"
            android:layout_alignParentEnd="true"
            android:text="Rua de algum lugar"
            style="@style/detailsCard"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/city_academy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/street_academy"
            android:text="Cidade: "
            style="@style/detailsCard" />

        <TextView
            android:id="@+id/value_city_academy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/city_academy"
            android:layout_toEndOf="@id/city_academy"
            android:layout_alignParentEnd="true"
            android:text="Caracas city"
            style="@style/detailsCard"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/state_academy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/city_academy"
            android:text="Estado: "
            style="@style/detailsCard" />

        <TextView
            android:id="@+id/value_state_academy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/state_academy"
            android:layout_toEndOf="@id/state_academy"
            android:layout_alignParentEnd="true"
            android:text="SP"
            style="@style/detailsCard"
            android:layout_marginStart="10dp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>

