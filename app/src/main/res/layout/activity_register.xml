<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.HomeActivity"
    android:background="@color/blueLight"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative_layaout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/fitware_icon"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/logo_icon" />

    </RelativeLayout>

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@drawable/top_redondo">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <EditText
               android:id="@+id/register_fistname"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               android:layout_marginBottom="15dp"
               android:layout_marginTop="30dp"
               android:drawablePadding="10dp"
               android:hint="@string/fist_name"/>

           <EditText
               android:id="@+id/register_secondyname"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               android:layout_marginBottom="15dp"
               android:drawablePadding="10dp"
               android:hint="@string/secondy_name"/>

           <EditText
               android:id="@+id/register_datanascimento"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               android:layout_marginBottom="15dp"
               android:drawablePadding="10dp"
               android:inputType="date"
               android:hint="@string/data_nascimento" />

           <Spinner
               android:id="@+id/spinner"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               android:drawablePadding="10dp" />
           <TextView
               android:id="@+id/msg_spinner"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="18sp"/>

           <EditText
               android:id="@+id/register_email"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               android:layout_marginBottom="15dp"
               android:drawablePadding="10dp"
               android:hint="@string/email" />

           <EditText
               android:id="@+id/register_password"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               android:layout_marginBottom="15dp"
               android:drawablePadding="10dp"
               android:inputType="textPassword"
               android:hint="@string/password" />

           <EditText
               android:id="@+id/register_cpf"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               android:layout_marginBottom="15dp"
               android:drawablePadding="10dp"
               android:hint="@string/cpf"/>

           <EditText
               android:id="@+id/register_weight"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               android:layout_marginBottom="15dp"
               android:drawablePadding="10dp"
               android:hint="@string/weight"/>

           <EditText
               android:id="@+id/register_height"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               android:layout_marginBottom="15dp"
               android:drawablePadding="10dp"
               android:hint="@string/height" />

           <EditText
               android:id="@+id/register_city"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               android:layout_marginBottom="15dp"
               android:drawablePadding="10dp"
               android:hint="@string/city" />

           <EditText
               android:id="@+id/register_state"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               android:layout_marginBottom="15dp"
               android:drawablePadding="10dp"
               android:hint="@string/state" />

           <EditText
               android:id="@+id/register_street"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               android:layout_marginBottom="15dp"
               android:drawablePadding="10dp"
               android:hint="@string/street" />

           <EditText
               android:id="@+id/register_cep"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               android:layout_marginBottom="15dp"
               android:drawablePadding="10dp"
               android:hint="@string/cep" />

           <EditText
               android:id="@+id/register_number"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               android:layout_marginBottom="15dp"
               android:drawablePadding="10dp"
               android:hint="@string/number" />

           <EditText
               android:id="@+id/register_cell"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               android:layout_marginBottom="15dp"
               android:drawablePadding="10dp"
               android:hint="@string/cell" />

           <Button
               android:id="@+id/button_register_end"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/inputs_redondos"
               android:text="@string/next"
               android:textSize="20sp"
               android:textColor="@color/light"
               android:layout_marginBottom="20dp"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"/>

       </LinearLayout>

   </ScrollView>

</LinearLayout>