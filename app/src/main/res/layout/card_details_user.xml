<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_rounded"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_user_card"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/fitware_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/linear_layout_details"
            android:layout_margin="5dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linear_layout_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_user_card"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/text_firstname__card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lucas"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/text_secondyname_card"
                app:layout_constraintBottom_toTopOf="@id/text_emailuser_card"
                style="@style/TextDetails" />

            <TextView
                android:id="@+id/text_secondyname_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mendes"
                style="@style/TextDetails"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/text_emailuser_card"
                app:layout_constraintStart_toEndOf="@id/text_firstname__card"/>

            <TextView
                android:id="@+id/text_emailuser_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="lucasmendes074@gmail.com"
                style="@style/TextDetails"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>

